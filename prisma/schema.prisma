generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id                  String  @id @unique() @default(uuid())
  name                String
  imageUrl            String
  deliveryFree        Decimal @db.Decimal(10, 2)
  deliveryTimeMinutes Int

  categories Category[]
  products   Product[]

  @@map("restaurant")
}

model Category {
  id       String @id @unique() @default(uuid())
  name     String
  imageUrl String

  restaurants Restaurant[]
  products    Product[]

  @@map("category")
}

model Product {
  id                 String  @id @unique() @default(uuid())
  name               String
  description        String
  imageUrl           String
  price              Decimal @db.Decimal(10, 2)
  discauntPercentage Int     @default(0)

  restaurantId String
  categoryId   String

  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  catergory  Category   @relation(fields: [categoryId], references: [id])

  @@map("product")
}
